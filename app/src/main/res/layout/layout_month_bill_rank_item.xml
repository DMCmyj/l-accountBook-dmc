<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingTop="10dp"
    android:paddingRight="16dp"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/tv_rank_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_rank_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_rank_number"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_book" />

    <TextView
        android:id="@+id/tv_rank_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="晚饭"
        android:textColor="#3C3C3C"
        android:textSize="14dp"
        app:layout_constraintEnd_toStartOf="@+id/tv_rank_price"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/img_rank_icon"
        app:layout_constraintTop_toTopOf="@+id/img_rank_icon" />

    <TextView
        android:id="@+id/tv_rank_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5月4日"
        android:textColor="@color/third_gray"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/img_rank_icon"
        app:layout_constraintStart_toStartOf="@+id/tv_rank_name" />

    <TextView
        android:id="@+id/tv_rank_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-286.67"
        android:textColor="#3C3C3C"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/img_rank_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/img_rank_icon" />
</androidx.constraintlayout.widget.ConstraintLayout>