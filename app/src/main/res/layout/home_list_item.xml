<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_pink_second"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingTop="10dp"
        android:paddingRight="16dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/list_item_title_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView"
            android:textColor="#F3F3F3" />

        <TextView
            android:id="@+id/list_item_title_total_income"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="TextView"
            android:textColor="@color/white"
            android:visibility="gone" />

        <TextView
            android:id="@+id/list_item_title_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@color/white" />
    </LinearLayout>

    <com.catpudding.pudding_keep_account.ui.home.utils.HomeListView
        android:id="@+id/sub_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/page_bg"
        android:dividerHeight="1dp"
        android:layoutAnimation="@anim/anim_list2" />
</LinearLayout>